@PACKAGE_INIT@

# This helper macro allows us to find dependencies
include(CMakeFindDependencyMacro)

# Find each dependency. This will forward the REQUIRED/QUIET
# flags from the user's find_package(gpuspatial) call.
find_dependency(nanoarrow)
find_dependency(geoarrow)
find_dependency(rmm)

# Create a variable pointing to the installed shader directory
set(gpuspatial_SHADER_DIR "@PACKAGE_GPUSPATIAL_SHADER_INSTALL_DIR@")

# Include the targets file, which contains the imported 'gpuspatial::gpuspatial' target
include("${CMAKE_CURRENT_LIST_DIR}/gpuspatial-targets.cmake")

# Check that all required components are available (useful if you add components later)
check_required_components(gpuspatial)